#include <stdio.h>
#include <stdlib.h>

int main(int argc, char *argv[]) 
{	
	int cod, qtd;
	float valor;
	
	printf("Digite o codigo do produto:");
	scanf("%d", &cod);
	
	printf("Digite a quantidade do produto:");
	scanf("%d", &qtd);
	
	if(cod==1001)
	{
	valor=qtd*6.20;
	printf("O produto laranja\n");
	printf("O valor sera R$ %.2f", valor);
	}
	else if(cod==1002)
	{
	valor=qtd*8.90;
	printf("O produto maca\n");
	printf("O valor sera R$ %.2f", valor);
	}
	else if(cod==1003)
{	valor=qtd*2.50;
	printf("O produto bergamota\n");
	printf("O valor sera R$ %.2f", valor);
	}
	
	else if(cod==1004)
	{
	valor=qtd*3.50;
	printf("O produto cebola\n");
	printf("O valor sera R$ %.2f", valor);
	}
	
	return 0;
}
