#include <stdio.h>
#include <stdlib.h>

int main(int argc, char *argv[]) 
{
	int nota1, nota2, nota3;
	float media;
	
	printf("Digite a nota da prova 1: ");
	scanf("%d", & nota1);
	
	printf("\nDigite a nota da prova 2: ");
	scanf("%d", & nota2);
	
	printf("\nDigite a nota da prova 3: ");	
	scanf("%d", & nota3);
	
	media = (nota1 + nota2 + nota3)/3;
	
	if ( media>=7)
	{
	printf("APROVADO");
	}	
	else if (media>3 && media<7)
	 {
	 	printf(" RECUPERACAO");
	}
	else if (media<3)
	{
		printf( "REPROVADO");
	}
	return 0;
}
