#include <stdio.h>
#include <stdlib.h>

int main(int argc, char *argv[]) 
{
	float salario;
	printf("Digite seu salario: ");
	scanf("%f", &salario);
	
	if(salario<1500)
	{
	float novo=(salario+salario*12/100);
	printf("\n O reajuste ira para: .2%f ",novo);
	}
	else if(1500<=salario && salario<2000)
	{
	float novo=(salario+salario*11/100);
	printf("\n O reajuste ira para:.2%f ", novo);
	}
	else if(2000<=salario && salario<=3000)
	{
	float novo= (salario+salario*10/100);
	printf("\n O reajuste ira para:.2%f ", novo);
	}
	else if(3000<=salario && salario<4000)
	{
	float novo=(salario+salario*9/100);
	printf("\n O reajuste ira para:.2%f ", novo);
	}
	else if(4000<salario)
	{
	float novo=(salario+salario*8/100);
	printf("\n O reajuste ira para:.2%f ", 	novo);
	}

	return 0;
}
